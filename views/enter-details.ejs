<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <h1>Enter Your Details</h1>
    <form action="/users/submit-details" method="POST">
        <div>
            <label for="fullName">Full Name:</label>
            <input type="text" name="fullName" id="fullName" required />
        </div>
        <div>
            <label for="age">Age:</label>
            <input type="number" name="age" id="age" required />
        </div>
        <div id="nationalIdDiv" style="display: none;">
            <label for="nationalId">National ID:</label>
            <input type="text" name="nationalId" id="nationalId" />
        </div>
        <button type="submit">Submit</button>
    </form>

    <script>
        const ageInput = document.getElementById('age');
        const nationalIdDiv = document.getElementById('nationalIdDiv');

        ageInput.addEventListener('input', function() {
            if (parseInt(this.value) >= 18) {
                nationalIdDiv.style.display = 'block';
            } else {
                nationalIdDiv.style.display = 'none';
            }
        });
    </script>
</body>

</html>