<!DOCTYPE html>
<html>

<head>
    <title>Add a Sibling</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add a Sibling for
            <%= user.fullName %>
        </h1>

        <!-- Display any messages -->
        <% if (message) { %>
            <div class="alert alert-warning">
                <%= message %>
            </div>
            <% } %>

                <!-- Form to add a sibling -->
                <form action="/users/add-sibling" method="POST">
                    <div class="mb-3">
                        <label for="siblingName" class="form-label">Sibling's Full Name:</label>
                        <input type="text" name="siblingName" id="siblingName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="siblingAge" class="form-label">Sibling's Age:</label>
                        <input type="number" name="siblingAge" id="siblingAge" class="form-control" required />
                    </div>
                    <div id="siblingNationalIdDiv" class="mb-3" style="display: none;">
                        <label for="siblingNationalId" class="form-label">Sibling's National ID:</label>
                        <input type="text" name="siblingNationalId" id="siblingNationalId" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add Sibling</button>
                </form>
    </div>

    <!-- Script to show/hide National ID field based on age -->
    <script>
        const siblingAgeInput = document.getElementById('siblingAge');
        const siblingNationalIdDiv = document.getElementById('siblingNationalIdDiv');

        siblingAgeInput.addEventListener('input', function() {
            if (parseInt(this.value) >= 18) {
                siblingNationalIdDiv.style.display = 'block';
            } else {
                siblingNationalIdDiv.style.display = 'none';
            }
        });
    </script>

    <!-- Bootstrap JS and Popper.js (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>